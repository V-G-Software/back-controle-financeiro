{
  "compilerOptions": {
    "skipLibCheck": true,
    "rootDirs": ["./src"],
    "outDir": "dist",
    "lib": ["es2021", "dom"],
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowJs": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "~types": ["./src/graphql/modules/types.generated.ts"],
      "~models": ["./src/models"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.js"]
}
